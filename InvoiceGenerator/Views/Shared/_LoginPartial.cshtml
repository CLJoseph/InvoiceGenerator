@using InvoiceGenerator.Data 
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-controller="Administration" asp-action="EditUser"  title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Administration" asp-action="Logout" title="Manage">Logout</a>
    </li>
}
else
{
    <li class="nav-item">      
        <a class="nav-link text-dark" asp-controller="Administration" asp-action="RegisterUser">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Administration" asp-action="Login">Login</a>
    </li>
}
</ul>
